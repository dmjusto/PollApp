<%- include('../partials/header') %>

<div id="pollIndex" class="container">

    <div class="list-group">
        <div class="list-group-item-dark p-3 justify-content-between d-flex">
            <div class="d-flex">
                <form class="" action="/polls" method="get">
                    <button class="btn btn-info btn-sm sortBtn" name="sortByNew" value="new" id="sortNewBtn">New <i class="fas fa-sort"></i></button>
                </form>
                <form class="" action="/polls" method="get">
                    <button class="btn btn-info btn-sm sortBtn" name="sortByPopular" value="popular" id="sortPopularBtn">Popular <i class="fas fa-sort"></i></button>
                </form>
            </div>

            <a href="/polls/new" class="btn btn-success">Post New Poll</a>
        </div>
        <% polls.forEach(poll => { %>
            <a href="/polls/<%= poll._id %> " class="list-group-item list-group-item-action">
                <div class="row">
                    <div class=" col-2 col-lg-1">
                        <div class="pollPreview">
                            <% for( let i = 0; i < poll.options.length; i++ ) { %>
                                <% if (poll.votes[i] !== 0) { %>
                                    <div class="bars" style=" height: <%= Math.round(poll.votes[i]/poll.totalVotes *1000) / 10 %>%;"></div>
                                <% } else { %>
                                    <div class="bars" style=" height: 8%;"></div>
                                <% } %>
                            <% } %>
                        </div>
                    </div>

                    <div class="col-10 col-lg-11">
                        <h3><%= poll.title %></h3>
                        <small><span> - Posted by: <%= poll.author.username %></span> <span class="text-muted">(<%= poll.createdAt.toDateString() %>) </span> </small>
                    </div>
                </div>
                
            </a>
        <% }) %>
    </div>

    <!-- PAGINATION -->
    <nav id="paginationNav" aria-label="page navigation">
        <% if (pages && pages > 0) { %>
            <ul class="pagination justify-content-center">
                <% if (current == 1) { %>
                    <li class="page-item disabled"><a class="page-link" href="">First</a></li>
                    <li class="page-item disabled"><a class="page-link" href=""><<</a></li>
                <% } else { %>
                    <li><a class="page-link" href="/polls">First</a></li>
                    <li><a class="page-link" href="/polls?page=<%= Number(current) - 1 %> "><<</a></li>
                <% } %>


                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %> 
                <% if (i !== 1) { %>
                    <li class="page-item disabled"><a class="page-link" href="">...</a></li>
                <% } %>
                <% for( ; i <= (Number(current) + 4) && i <= pages; i++) { %>
                    <% if (i == current) { %>
                        <li class="page-item disabled"><a class="page-link" href=""><%= i %> </a></li>
                    <% } else { %>
                        <li><a class="page-link" href="/polls?page=<%= i %> "><%= i %> </a></li>
                    <% } %>
                     <% if (i == Number(current) + 4 && i < pages) { %>
                        <li class="page-item disabled"><a class="page-link" href="">...</a></li>
                     <% } %>   
                <% } %>


                <% if (current == pages) { %>
                    <li class="page-item disabled"><a class="page-link" href="">>></a></li>
                    <li class="page-item disabled"><a class="page-link" href="">Last</a></li>
                <% } else { %>
                    <li><a class="page-link" href="/polls?page=<%= Number(current) + 1 %> ">>></a></li>
                    <li><a class="page-link" href="/polls?page=<%= pages %> ">Last</a></li>
                <% } %>
            </ul>
            
        <% } %>
    </nav>
</div>

<%- include('../partials/footer') %> 