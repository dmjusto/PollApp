<form class="Form" action="/login" method="POST">
    <h1>Login</h1>
    <div class="form-group">
        <input type="text" class="form-control" name="username" placeholder="username..." aria-label="username" required autofocus>
    </div>
    <div class="form-group">    
        <input type="password" class="form-control" name="password" placeholder="password..." aria-label="password" required>
    </div>
    <button class="btn btn-primary btn-lg" type="submit">Login</button>
</form>

